			<!-- close 속성 : foreach 엘리먼트 뒷부분에 추가될 SQL 구문을 속성값으로 설정 -->
			<!-- separator 속성 : 요소값을 구분하기 위한 구분문자를 속성값으로 설정 -->
			<foreach collection="list" item="id" open="(" close=")" separator=",">
